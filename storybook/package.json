{
  "name": "storybook",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "develop": "start-storybook  -c .storybook -p 3333  --host 0.0.0.0",
    "build": "build-storybook -c .storybook",
    "storyshots-build": "export storybookBuildMode=fast && yarn build",
    "storyshots-preview-backup": "mv .storybook/preview.js .storybook/preview.js.bu",
    "storyshots-preview-restore": "mv .storybook/preview.js.bu .storybook/preview.js",

    "presnapshots": "yarn storyshots-build; yarn storyshots-preview-backup;",
    "snapshots": "yarn jest --config ./jest-image-snapshots.config.js",
    "postsnapshots": "yarn storyshots-preview-restore",

    "snapshots-update-only": " yarn jest -u --config ./jest-image-snapshots.config.js; yarn storyshots-preview-restore",
    "presnapshots-update": "yarn storyshots-build; yarn storyshots-preview-backup;",
    "snapshots-update": "yarn snapshots-update-only",
    "postsnapshots-update": "yarn storyshots-preview-restore",

    "a11y": "yarn storyshots-task --config ./jest-a11y.config.js"
  },
  "dependencies": {
    "@looker/components": "*",
    "@looker/components-date": "*",
    "@looker/components-providers": "*",
    "@looker/components-theme-editor": "*",
    "@looker/design-tokens": "*",
    "lodash": "*",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-is": "^16.13.1",
    "storybook": "^6.3.0",
    "styled-components": "*"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-storyshots": "^6.2.9",
    "@storybook/addon-storyshots-puppeteer": "^6.2.9",
    "@storybook/react": "^6.2.9",
    "babel-loader-exclude-node-modules-except": "^1.2.1",
    "tsconfig-paths-webpack-plugin": "^3.5.1"
  }
}
