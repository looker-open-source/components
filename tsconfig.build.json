{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "paths": {}
  },
  "exclude": [
    "*.js",
    "**/__mocks__/**",
    "**/*.shots.ts",
    "**/*.shots.tsx",
    "**/*.a11y.ts",
    "**/*.a11y.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.stories.tsx",
    "**/*.story.tsx",
    "**/stories/*",
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "include": ["types"]
}
