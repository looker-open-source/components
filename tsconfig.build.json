{
  "extends": "./tsconfig.common.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "exclude": [
    "**/__mocks__/**",
    "**/*.shots.ts",
    "**/*.shots.tsx",
    "**/*.a11y.ts",
    "**/*.a11y.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.stories.tsx",
    "**/*.story.tsx",
    "**/stories/*",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
