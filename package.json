{
  "name": "monorepo",
  "license": "MIT",
  "author": "Looker",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "homepage": "http://components.looker.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/looker-open-source/components.git"
  },
  "bugs": {
    "url": "https://github.com/looker-open-source/components/issues"
  },
  "engines": {
    "node": ">=12",
    "yarn": ">=1.14.0"
  },
  "scripts": {
    "build": "yarn lerna run build --stream",
    "postbuild": "run-p -c 'lint'",
    "clean": "rm -Rf packages/*/lib packages/*/*.tsbuildinfo",
    "prepublishOnly": "yarn test",
    "deploy": "yarn workspace www deploy",
    "playground": "yarn workspace playground develop",
    "server": "yarn workspace server develop",
    "www": "yarn workspace www develop",
    "fix": "run-p -c fix:*",
    "fix:es": "yarn lint:es --fix",
    "fix:mdx": "yarn lint:mdx --fix",
    "fix:prettier": "yarn lint:prettier --write",
    "lint": "run-p -c lint:*",
    "lint:css": "stylelint 'packages/**/*.ts{,x}'",
    "lint:es": "eslint 'packages/**/*.ts{,x}' --cache",
    "lint:mdx": "yarn workspace www lint",
    "lint:ts": "tsc",
    "lint-staged": "yarn exec lint-staged",
    "test": "yarn jest"
  },
  "devDependencies": {
    "@looker/eslint-config": "^1.0.14",
    "@looker/prettier-config": "^1.0.15",
    "@testing-library/jest-dom": "^5.1.1",
    "@types/node": "^13.13.1",
    "core-js": "^3.6.4",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint-plugin-header": "^3.0.0",
    "eslint-plugin-import": "^2.20.2",
    "jest": "^25.1.0",
    "jest-canvas-mock": "^2.2.0",
    "jest-styled-components": "^6.3.4",
    "lerna": "^3.20.2",
    "lint-staged": "^10.1.7",
    "npm-run-all": "^4.1.5",
    "pre-commit": "1.2.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "styled-components": "^4.4.1",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3"
  },
  "resolutions": {
    "sharp": "0.24.0"
  },
  "lint-staged": {
    "**/*.ts?(x)": [
      "stylelint",
      "eslint",
      "git add"
    ],
    "**/*.js?(x)": [
      "git add"
    ],
    "**/*.md?(x)": [
      "git add"
    ]
  },
  "pre-commit": [
    "lint-staged"
  ],
  "eslintConfig": {
    "extends": [
      "@looker/eslint-config/no-type-checking"
    ],
    "plugins": [
      "header",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/no-explicit-any": "off",
      "header/header": [
        2,
        "config/license-header.js"
      ]
    },
    "settings": {
      "workspaces": {
        "extensions": [
          ".ts",
          ".tsx"
        ],
        "sources": {
          "@looker/components": [
            "packages/components/src"
          ],
          "@looker/components-providers": [
            "packages/providers/src"
          ],
          "@looker/components-test-utils": [
            "packages/test-utils/src"
          ],
          "@looker/design-tokens": [
            "packages/design-tokens/src"
          ],
          "@looker/icons": [
            "packages/icons/src"
          ]
        }
      }
    }
  },
  "prettier": "@looker/prettier-config",
  "stylelint": {
    "extends": "@looker/eslint-config/stylelint"
  }
}
