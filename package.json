{
  "name": "monorepo",
  "license": "MIT",
  "author": "Looker",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "homepage": "http://components.looker.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/looker-open-source/components.git"
  },
  "bugs": {
    "url": "https://github.com/looker-open-source/components/issues"
  },
  "engines": {
    "node": ">=12",
    "yarn": ">=1.14.0"
  },
  "scripts": {
    "prepare": "yarn lerna run prepare  --stream",
    "prebuild": "yarn clean && yarn prepare",
    "build": "yarn lerna exec --scope '@looker/*' --stream 'BABEL_ENV=build babel src --root-mode upward --out-dir lib --source-maps --extensions .ts,.tsx --no-comments'",
    "ci": "yarn build && yarn lint && yarn workspace www build",
    "declarations": "yarn lerna exec --stream --scope '@looker/*' --sort 'tsc -b tsconfig.build.json'",
    "postbuild": "yarn declarations",
    "clean": "rm -Rf packages/*/lib packages/*/*.tsbuildinfo",
    "prepublishOnly": "yarn test",
    "deploy": "yarn workspace www deploy",
    "playground": "yarn workspace playground start",
    "server": "yarn workspace server start",
    "gatsby": "yarn workspace www start",
    "fix": "run-p -c fix:*",
    "fix:es": "yarn lint:es --fix",
    "fix:mdx": "yarn lint:mdx --fix",
    "fix:prettier": "yarn lint:prettier --write",
    "lint": "run-p -c lint:*",
    "lint:css": "stylelint 'packages/**/*.ts{,x}'",
    "lint:es": "eslint 'packages/**/*.ts{,x}' 'packages/www/*.md{,x}' --cache",
    "lint:types": "tsc",
    "lint-staged": "yarn exec lint-staged",
    "test": "yarn jest"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.5",
    "@babel/plugin-proposal-optional-chaining": "^7.9.0",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-react": "7.9.4",
    "@babel/preset-typescript": "^7.9.0",
    "@babel/runtime": "^7.9.2",
    "@looker/eslint-config": "^1.0.14",
    "@looker/prettier-config": "^1.0.15",
    "@testing-library/jest-dom": "^5.5.0",
    "@types/node": "^13.13.4",
    "babel-core": "^7.0.0-bridge",
    "babel-plugin-styled-components": "^1.10.7",
    "core-js": "^3.6.5",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-header": "^3.0.0",
    "eslint-plugin-mdx": "^1.6.8",
    "eslint-plugin-sort-keys-fix": "^1.1.1",
    "jest": "^25.1.0",
    "jest-canvas-mock": "^2.2.0",
    "jest-styled-components": "^6.3.4",
    "lerna": "^3.20.2",
    "lint-staged": "^10.2.2",
    "npm-run-all": "^4.1.5",
    "pre-commit": "1.2.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "styled-components": "^4.4.1",
    "ts-jest": "^25.4.0",
    "typescript": "^3.8.3"
  },
  "lint-staged": {
    "**/*.ts?(x)": [
      "stylelint",
      "eslint",
      "git add"
    ],
    "**/*.js?(x)": [
      "git add"
    ],
    "**/*.md?(x)": [
      "git add"
    ]
  },
  "pre-commit": [
    "lint-staged"
  ],
  "eslintConfig": {
    "extends": [
      "@looker/eslint-config/no-type-checking"
    ],
    "plugins": [
      "header",
      "prettier",
      "sort-keys-fix"
    ],
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/no-explicit-any": "off",
      "header/header": [
        2,
        "config/license-header.js"
      ],
      "import/default": "off",
      "import/no-named-as-default-member": "off",
      "import/order": "off",
      "sort-keys-fix/sort-keys-fix": "warn",
      "sort-keys": "off"
    },
    "settings": {
      "import/resolver": {
        "typescript": {
          "directory": "./tsconfig.json"
        }
      }
    },
    "overrides": [
      {
        "files": [
          "**/*.mdx"
        ],
        "extends": [
          "plugin:mdx/recommended"
        ],
        "rules": {
          "mdx/no-unescaped-entities": "off",
          "sort-keys": "off",
          "header/header": "off"
        }
      },
      {
        "files": [
          "packages/www/**/*.ts",
          "packages/www/**/*.tsx"
        ],
        "rules": {}
      }
    ]
  },
  "prettier": "@looker/prettier-config",
  "stylelint": {
    "extends": "@looker/eslint-config/stylelint"
  }
}
