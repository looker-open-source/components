{
  "extends": "./tsconfig.common.json",
  "compilerOptions": {
    "noEmit": true,
    "pretty": true,
    "baseUrl": ".",
    "paths": {
      "@looker/components": ["packages/components/src"],
      "@looker/components-providers": ["packages/providers/src"],
      "@looker/components-test-utils": ["packages/test-utils/src"],
      "@looker/design-tokens": ["packages/design-tokens/src"],
      "@looker/icons": ["packages/icons/src"]
    }
  },
  "include": ["packages/*/src"],
  "exclude": ["packages/www/src"]
}
